<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center">
  <div class="row">
    <div class="col-8 offset-1">
      <div class="card shadow">
        <div class="card-body">
          <img
            src="https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NTJ8fGNhbXBncm91bmRzfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60"
            alt=""
            class="card-img-top mb-1"
          />
          <div class="card-title">
            <h5>Register</h5>
          </div>
          <form
            action="/register"
            method="POST"
            class="needs-validation"
            novalidate
          >
            <div class="mb-1">
              <label class="form-label" for="title">Username </label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                autofocus
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter username</div>
            </div>
            <div class="mb-1">
              <label class="form-label" for="title">Email </label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter your email</div>
            </div>
            <div class="mb-1">
              <label class="form-label" for="title">Password </label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter your password</div>
            </div>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Passwords did not match</div>
            </div>
            <button class="btn btn-success">Register</button>
            <span
              >Do you already have an account?
              <a href="/login">Click here!</a></span
            >
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
