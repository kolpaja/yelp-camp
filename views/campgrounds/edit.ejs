<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campgrounds._id %>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Name </label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          value="<%= campgrounds.title  %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location </label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          value="<%= campgrounds.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="col mb-3">
        <label class="form-label" for="image">Image Url </label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          value="<%= campgrounds.image  %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="price">Campground Price:</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            name="campground[price]"
            aria-describedby="price"
            value="<%= campgrounds.price %>"
            required
          />
        </div>
      </div>
      <div class="col mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          required
        >
<%= campgrounds.description %>
          </textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="d-grid gap-2 mb-3">
        <button class="btn btn-info">Save Changes</button>
      </div>
      <div class="mb-3">
        <a
          href="/campgrounds/<%= campgrounds._id %>"
          class="link-primary text-decoration-none"
          >&#8656; back to campground</a
        >
      </div>
    </form>
  </div>
</div>
