<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campgrounds._id %>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Name </label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          value="<%= campgrounds.title  %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
          Please enter a valid name of campground.
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location </label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          value="<%= campgrounds.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a a valid location.</div>
      </div>

      <div class="input-group mb-3">
        <label class="form-label" for="price">Campground Price:</label>
        <div class="input-group">
          <span class="input-group-text" id="price">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            name="campground[price]"
            aria-describedby="price"
            value="<%= campgrounds.price %>"
            required
          />
          <div class="invalid-feedback">
            Please enter the price/night of the campground.
          </div>
        </div>
      </div>
      <div class="input-group mb-3">
        <div class="input-group mb-3">
          <label for="">Add other images:</label>
        </div>
        <input
          type="file"
          class="form-control"
          id="inputGroupFile02"
          name="image"
          multiple
        />
        <label class="input-group-text" for="inputGroupFile02">Upload</label>
      </div>
      <div class="col mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          required
        >
<%= campgrounds.description %>
          </textarea
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
          Please enter a message in the textarea.
        </div>
      </div>
      <div class="mb-3">
        <% campgrounds.images.forEach(function(img,i) {%>
        <div>
          <img src="<%= img.url %> " class="img-thumbnail" />
          <div class="form-check-inline">
            <input
              type="checkbox"
              id="image-<%=i%>"
              name="deleteImages[]"
              value="<%= img.filename %>"
            />
          </div>
          <label for="image-<%=i%>">Delete?</label>
        </div>
        <%})%>
      </div>
      <div class="d-grid gap-2 mb-3">
        <button class="btn btn-info">Save Changes</button>
      </div>
      <div class="mb-3">
        <a
          href="/campgrounds/<%= campgrounds._id %>"
          class="link-primary text-decoration-none"
          >&#8656; back to campground</a
        >
      </div>
    </form>
  </div>
</div>
